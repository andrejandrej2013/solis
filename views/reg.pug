extends layout
block content
  h1 Regisatration
  div
    form(action="/reg", method="post") 
      label(for="username") Login
      input(id="username",name="username",type="text",required)
      br
      label(for="email") Email
      input(id="email",name="email",type="email",required)
      br
      label(for="date_of_birth") Date of birth
      input(id="date_of_birth",name="date_of_birth",type="date",required)
      br
      label(for="firstName") First Name
      input(id="fname",name="firstName",type="text",required)
      br
      label(for="lastName") Last Name
      input(id="lname",name="lastName",type="text",required)
      br
      label(for="password") Password
      input(id="password",name="password",type="password",required) 
      br
      label(for="rules") Rules
      input(id="rules",name="rules",type="checkbox",required) 
      br
      //- remember_token - not sure how to do it
      //- input(id="token",type="hidden") 
      input(id="submit",type="submit", value="Submit")
  div(id="demo")
  script.
    function myFunction() {
      var x = document.getElementById("email").value;
      document.getElementById("demo").innerHTML = x;
    }